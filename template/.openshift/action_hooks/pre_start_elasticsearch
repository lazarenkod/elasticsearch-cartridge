#!/bin/bash -eu

sed -i "s/OPENSHIFT_INTERNAL_IP/$OPENSHIFT_ELASTICSEARCH_IP/g" ${OPENSHIFT_ELASTICSEARCH_DIR}config/elasticsearch.yml

sed -i "s/OPENSHIFT_ELASTICSEARCH_CONFIG_DIR/$OPENSHIFT_ELASTICSEARCH_CONFIG_DIR/g" ${OPENSHIFT_ELASTICSEARCH_CONFIG_DIR}elasticsearch.yml

sed -i "s/OPENSHIFT_ELASTICSEARCH_DATA_DIR/$OPENSHIFT_ELASTICSEARCH_DATA_DIR/g" ${OPENSHIFT_ELASTICSEARCH_CONFIG_DIR}elasticsearch.yml

sed -i "s/OPENSHIFT_ELASTICSEARCH_LOG_DIR/$OPENSHIFT_ELASTICSEARCH_LOG_DIR/g" ${OPENSHIFT_ELASTICSEARCH_CONFIG_DIR}elasticsearch.yml

sed -i "s/OPENSHIFT_ELASTICSEARCH_TMP_DIR/$OPENSHIFT_ELASTICSEARCH_TMP_DIR/g" ${OPENSHIFT_ELASTICSEARCH_CONFIG_DIR}elasticsearch.yml